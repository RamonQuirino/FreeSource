@using System.Activities.Statements
@model FreeSource.Portal.ViewModels.Customer.IndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.IsValid())
{
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="row">
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> Cadastros <span>> Empresa</span>
                </h1>
            </div>

        </div>
        <!-- widget grid -->
        <section id="widget-grid" class="">

            <!-- row -->
            <div class="row">
                <article class="col-sm-12">
                    <!-- new widget -->
                    <div class="jarviswidget" id="wid-id-0" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false">
                        <header>
                            <span class="widget-icon"> <i class="glyphicon glyphicon-stats txt-color-darken"></i> </span>
                            <h2>Empresas </h2>
                        </header>

                        <!-- widget div-->


                        <div class="widget-body">
                            <!-- content -->

                            <div class="tab-pane fade active in padding-10 no-padding-bottom" id="s1">

                                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 show-stats">
                                    <div class="row">
                                        <div class="table-responsive">

                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                <tr>
                                                    <th>Empresa</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                @foreach (var customer in Model.User.Person.Customers)
                                                {
                                                    <tr>
                                                        <td>@customer.Person.Name</td>
                                                    </tr>
                                                }
                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end widget -->

                </article>
            </div>
        </section>
    </div>
    <!-- END MAIN CONTENT -->
    @section pagespecific {
        <script>

        </script>
    }
}

